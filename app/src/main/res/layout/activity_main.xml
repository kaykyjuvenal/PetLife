<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbarIn"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/editarIdaVeterinarioBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar ida ao Veterinário"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/editarIdaPetshopBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar ida ao Petshop"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editarIdaVeterinarioBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/editarIdaVacinaBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar ida para Vacinação"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editarIdaPetshopBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/editarPetBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Pet"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editarIdaVacinaBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/discarTelefoneconsultorioBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discar telefone consultorio"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/editarPetBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/abrirSiteConsultorioBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir site consultorio"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/discarTelefoneconsultorioBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/listaPetsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Pets"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/abrirSiteConsultorioBt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
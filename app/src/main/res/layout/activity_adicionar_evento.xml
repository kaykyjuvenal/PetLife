<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdicionarPetActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <include
            android:id="@+id/toolbarIn"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/dataEventoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data do Evento"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarIn"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/horaEventoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora do Evento"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dataEventoEt"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/tipoDoEventoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo do Evento"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horaEventoEt"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/nomeDoPetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Pet"
            android:inputType="text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tipoDoEventoEt"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/salvarEventoBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar Pet"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/nomeDoPetEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarIdaAoVeterinarioActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <EditText
            android:id="@+id/nomePetEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Pet"
            android:inputType="text"
            android:padding="5dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/telefoneConsultorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Novo telefone do consultório"
            android:inputType="text"
            android:padding="5dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nomePetEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"/>
        <EditText
            android:id="@+id/siteConsultorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Novo site do consultório"
            android:inputType="text"
            android:padding="5dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/telefoneConsultorio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"/>
        <EditText
            android:id="@+id/dataVeterinarioEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nova Data do Veterinário"
            android:inputType="text"
            android:padding="5dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/siteConsultorio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"/>
        <Button
            android:id="@+id/salvarBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/dataVeterinarioEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
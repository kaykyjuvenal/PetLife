<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditarEventosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <include
            android:id="@+id/toolbarIn"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/dataEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nova Data"
            android:inputType="text"
            android:padding="5dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbarIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/horarioEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/dataEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/tipoDeEventoEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Evento"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/horarioEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/nomeDoPetEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Pet"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tipoDeEventoEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <Button
            android:id="@+id/salvarBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/nomeDoPetEt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>